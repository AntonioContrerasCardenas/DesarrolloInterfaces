<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConversorUnidades.MVVM.Views.PPrincPage"
             Title="PPrincPage">
    <Grid RowDefinitions="*,6*">
        <Grid Grid.Row="0">
            <Label Text="-Conversor de Unidades-"
                   TextColor="White"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <Grid Grid.Row="1" RowDefinitions="*,*,*" ColumnDefinitions="*,*,*">
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"  />
                </Grid.GestureRecognizers>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="&#xF0A0;" 
                           FontFamily="Icons"
                           FontSize="32"
                           HorizontalOptions="Center" />
                    <Label Text="Informacion" FontSize="16" />
                </VerticalStackLayout>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Grid.GestureRecognizers>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="&#xF1B2;" 
               FontFamily="Icons"
               FontSize="32"
               HorizontalOptions="Center" />
                    <Label Text="Volumen" FontSize="16" />
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>